<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:background="#EFEAEF"
        android:textColor="@color/black"
        android:textAlignment="viewEnd"
        android:layout_marginBottom="10dp"
        android:id="@+id/input"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:textColor="@color/black"
            android:text="7"
            android:id="@+id/btn7"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:textColor="@color/black"
            android:text="8"
            android:id="@+id/btn8"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:textColor="@color/black"
            android:text="9"
            android:id="@+id/btn9"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:text="รท"
            android:backgroundTint="#915BF1"
            android:id="@+id/btndiv"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:textColor="@color/black"
            android:text="4"
            android:id="@+id/btn4"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:textColor="@color/black"
            android:text="5"
            android:id="@+id/btn5"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:textColor="@color/black"
            android:text="6"
            android:id="@+id/btn6"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:text="ร"
            android:id="@+id/btnmul"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:textColor="@color/black"
            android:text="1"
            android:id="@+id/btn1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:textColor="@color/black"
            android:text="2"
            android:id="@+id/btn2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:textColor="@color/black"
            android:text="3"
            android:id="@+id/btn3"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:text="-"
            android:id="@+id/btnsub"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:text="AC"
            android:id="@+id/btnac"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:textColor="@color/black"
            android:text="0"
            android:id="@+id/btn0"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:text="="
            android:id="@+id/btneq"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="35sp"
            android:backgroundTint="#915BF1"
            android:text="+"
            android:id="@+id/btnadd"/>
    </LinearLayout>
</LinearLayout>